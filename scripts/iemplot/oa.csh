source /mesonet/nawips/Gemenviron


set yy=`date -u --date '1 minute' +'%y'`
set mm=`date -u --date '1 minute' +'%m'`
set dd=`date -u --date '1 minute' +'%d'`
set hh=`date -u --date '1 minute' +'%H'`
