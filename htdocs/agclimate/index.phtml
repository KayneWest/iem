 			c2f($row["t12_c_avg"]), $row["vwc_12_avg"] * 100.0,
 			c2f($row["t24_c_avg"]), $row["vwc_24_avg"] * 100.0,
 			c2f($row["t50_c_avg"]), $row["vwc_50_avg"] * 100.0);
 }
 
