function determine_time_base($t)
{
  /* Round to the nearest 5 minute! */
  $year = date("Y", $t);
  $month = date("m", $t);
  $day = date("d", $t);
  $hour = date("H", $t);
  $m = intval(date("i", $t) / 5) * 5;
  return mktime($hour, $m, 0, $month, $day, $year);
}

